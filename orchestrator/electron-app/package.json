{
  "name": "vader-ai-orchestrator-app",
  "version": "1.0.0",
  "description": "Vader AI Orchestrator Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "package": "electron-packager . 'Vader AI Orchestrator' --platform=darwin --arch=arm64 --out=dist --overwrite --icon=../assets/icon_f.icns"
  },
  "build": {
    "appId": "com.vaderai.orchestrator",
    "productName": "Vader AI Orchestrator",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "../assets/icon_f.icns",
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  }
}
